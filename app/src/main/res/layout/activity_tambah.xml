<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pab.unpar.pklmobilekelompok.Tambah">

    <TextView
        android:id="@+id/viewDetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nama produk"/>

    <TextView
        android:id="@+id/viewDetailHargaPokok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailNamaProduk"
        android:textSize="20dp"
        android:text="Harga pokok"/>

    <TextView
        android:id="@+id/viewDetailHargaJual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailHargaPokok"
        android:textSize="20dp"
        android:text="Harga jual"/>

    <EditText
        android:id="@+id/detailNamaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDetailNama"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/detailHargaPokok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDetailHargaPokok"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/detailHargaJual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDetailHargaJual"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/buttonBatal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Batal"/>

        <Button
            android:id="@+id/buttonSimpan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:text="Simpan"/>
    </LinearLayout>

</RelativeLayout>
