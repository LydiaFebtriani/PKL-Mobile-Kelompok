<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pab.unpar.pklmobilekelompok.Home">

    <Button
        android:id="@+id/katalogButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"

        android:text="KATALOG"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/rekapButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tmbhProdukButton"

        android:text="REKAP"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/transaksiButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/katalogButton"

        android:text="TRANSAKSI"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/tmbhProdukButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:text="TAMBAH PRODUK"
        android:textSize="30dp"
        android:layout_below="@+id/transaksiButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
