<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.pab.unpar.pklmobilekelompok.Pengaturan"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fPengaturan">

    <Button
        android:text="Ubah Warna Tampilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUbahWarna"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/titlePengaturan"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ubah Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUbahPass"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buttonUbahWarna"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonKembaliPengaturan"
        android:layout_below="@+id/cbSensorCahaya"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlePengaturan"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/cbSensorCahaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Gunakan sensor cahaya"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/buttonUbahPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />


</RelativeLayout>