<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.pab.unpar.pklmobilekelompok.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/pkl_icon"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Aplikasi PKL Mobile"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appTitle"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Oleh:"/>

        <TextView
            android:id="@+id/nama1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appTitle"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Gabriella"/>

        <TextView
            android:id="@+id/nama2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appTitle"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Lydia Febtriani"/>

        <TextView
            android:id="@+id/nama3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appTitle"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Ferdi Subagia"/>

        <TextView
            android:id="@+id/nama4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appTitle"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="Stephanie Tania"/>
    </LinearLayout>


</RelativeLayout>
