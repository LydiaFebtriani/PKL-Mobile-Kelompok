<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fRekap"
        tools:context="com.pab.ui.Rekap"
        android:shrinkColumns="* "
        android:stretchColumns="*" >

        <TextView
            android:text="REKAP TRANSAKSI PENJUALAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleRekap"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/headerRow"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/headerTanggal"
                    android:text="Tanggal Transaksi"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/headerNama"
                    android:text="Nama Produk"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/headerHarga"
                    android:text="Harga Jual"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/headerKuantitas"
                    android:text="Kuantitas"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/headerTotal"
                    android:text="Harga Total"
                    android:textStyle="bold" />
            </TableRow>


    </TableLayout>


</ScrollView>