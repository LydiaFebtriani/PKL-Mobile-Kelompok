<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/fRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pab.ui.KategoriRekap">

        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LIHAT REKAP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

        <com.pab.ui.layouteditor.CustomDatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pilihTanggalRekap"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/subtitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Lihat rekap mulai dari tanggal: "
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/pilihTanggalRekap"
            android:layout_alignStart="@+id/pilihTanggalRekap" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pilihTanggalRekap"
            android:layout_marginTop="25dp"
            android:text="Lihat Rekap"
            android:id="@+id/buttonLihatRekap" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonLihatRekap"
            android:layout_marginTop="10dp"
            android:text="Kembali"
            android:id="@+id/buttonKembali_LihatRekap" />


    </RelativeLayout>

</ScrollView>

