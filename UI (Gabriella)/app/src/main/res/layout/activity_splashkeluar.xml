<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fSplashKeluar"
    tools:context="com.pab.ui.SplashKeluar" >

    <TextView
        android:text="Terima kasih telah menggunakan aplikasi ini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleClose"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Kami sangat berharap masukan dari Anda\nSemua masukan silahkan disampaikan ke email\n7314013@student.unpar.ac.id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:textAlignment="center"
        android:layout_below="@+id/titleClose"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>