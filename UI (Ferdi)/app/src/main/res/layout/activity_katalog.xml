<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.i14059.ui.Katalog">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:textAlignment="center"
        android:text="KATALOG" />

    <Button
        android:id="@+id/katalog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="Produk 1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible" />

    <Button
        android:id="@+id/katalog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:text="Produk 2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/katalog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dp"
        android:text="Produk 3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/katalog4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="180dp"
        android:text="Produk 4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/katalog5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="230dp"
        android:text="Produk 5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/katalog6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="280dp"
        android:text="Produk 6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/buttonKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:layout_alignBaseline="@+id/buttonTransaksi"
        android:layout_alignBottom="@+id/buttonTransaksi"
        android:layout_alignParentStart="true"
        android:onClick="onButtonKeluar (Katalog)" />

    <Button
        android:text="Tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:id="@+id/buttonTambah"
        android:layout_above="@+id/buttonTransaksi"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonTambah (Katalog)" />

    <Button
        android:text="Transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/buttonTransaksi"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonTambah"
        android:onClick="onButtonTransaksi (Katalog)" />
</RelativeLayout>