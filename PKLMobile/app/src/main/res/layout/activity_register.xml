<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fRegistrasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.i14072.pklmobile.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Alamat e-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:text="Nama lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/iUser"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:text="Alamat lapak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/iNama"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:text="Nomor HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/iAlamat"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:text="Tanggal lahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/iNoHP"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:text="Produk unggul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/iTglLahir"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:text="Batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBatal"
                android:layout_below="@+id/iProdukUnggul"
                android:layout_toRightOf="@+id/btnSimpan"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:text="Simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSimpan"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/iProdukUnggul" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/iUser"
                android:hint="Masukkan e-mail Anda"
                android:layout_alignLeft="@+id/textView4"
                android:layout_below="@+id/textView4">
            <requestFocus />
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:id="@+id/iNama"
                android:hint="Masukkan nama lengkap Anda" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:id="@+id/iAlamat"
                android:hint="Masukkan alamat lapak Anda"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:id="@+id/iNoHP"
                android:hint="Masukkan nomor HP Anda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:id="@+id/iTglLahir"
                android:hint="Tap untuk pilih tanggal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:id="@+id/iProdukUnggul"
                android:hint="Masukkan nama produk unggulan Anda" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
