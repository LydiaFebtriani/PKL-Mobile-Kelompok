<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fTransaksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.i14072.pklmobile.TransaksiActivity">

    <TextView
        android:id="@+id/textViewTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transaksi" />

    <ListView
        android:id="@+id/transList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTransaksi"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp" />

    <RelativeLayout
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnRekap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Rekap" />

        <Button
            android:id="@+id/btnKatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnRekap"
            android:layout_alignBottom="@id/btnRekap"
            android:layout_marginLeft="10dp"
            android:text="Katalog" />

        <Button
            android:id="@+id/btnKeluar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnKatalog"
            android:layout_alignBottom="@id/btnKatalog"
            android:layout_marginLeft="10dp"
            android:text="Keluar" />

    </RelativeLayout>

</RelativeLayout>
